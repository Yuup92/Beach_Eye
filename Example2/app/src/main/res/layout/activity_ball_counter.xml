<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BallCounter">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/textHighScore"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:text="High Score\n0"
            android:paddingTop="60dp"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/editWebLink"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Pstv2 WebLink"
            android:text="https://ptsv2.com/t/q52cr-1569456929"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:text=""
            android:paddingTop="60dp"/>

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" />

        <TextView
            android:id="@+id/whitespace"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:text=""
            android:paddingTop="60dp"/>

        <Button
            android:id="@+id/buttonMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Menu" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>